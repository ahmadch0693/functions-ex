// ************************ Num 42 **************************************//


#include <iostream>
using namespace std;



float TotalSeconds(int NumberOfDays, int NumberOfHours, int NumberOfMinutes, int NumberOfSeconds) {


	return (NumberOfDays * 24 * 60 * 60) + (NumberOfHours * 60 * 60) + (NumberOfMinutes * 60) + (NumberOfSeconds);



}





int main()

{
	cout << "The total number of seconds is : " << TotalSeconds(2, 5, 45, 35) << endl;
	return 0;

}
// ************************ Num 43 **************************************//




#include <iostream>
using namespace std;


void SecondsDivide() {

	int  TotalSeconds = 193535;
	int   SecondsPerDay = 86400;
	int   SecondsPerHour = 3600;
	int  SecondsPerMinutes = 60;

	cout << endl;


   int NumberOfDays = TotalSeconds / SecondsPerDay;


	cout << endl;


	cout << endl;

	int DaysRemainder = TotalSeconds % SecondsPerDay;

	cout << endl;

	int NumberOfHours = DaysRemainder / SecondsPerHour;

	cout << endl;


	cout << endl;

	int HoursRemainder = DaysRemainder % SecondsPerHour;

	cout << endl;



	int NumberOfMinutes = HoursRemainder / SecondsPerMinutes;

	cout << endl;


	cout << endl;

	int NumberOfSeconds = HoursRemainder % SecondsPerMinutes;

	cout << endl;

	cout << "Number Of Days, Hours, Minutes and Seconds is respectively as follow : " << NumberOfDays << ": " << NumberOfHours << ": " << NumberOfMinutes << ": " << NumberOfSeconds << endl;




	cout << endl;


	
}






int main()

{
	
	SecondsDivide();


	return 0;

}





