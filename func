// Num 22 //

#include <iostream>
#include <string>

using namespace std;



float MyCircArea(int a, int b) {

	float PI = 3.14;

	

	return ((PI * b * b / 4) * ((2 * a - b)) / (2 * a + b));


}



	int main()

	{


		cout << MyCircArea(20, 10) << endl;

		return 0;
	}

// ************************ Num 23 **************************************//

#include <iostream>
#include <string>

using namespace std;




float MyRecArea(int a, int b, int c) {
	
	float PI = 3.14;
	int P = (a + b + c) / 2;
	float T = (a * b * c) / (4 * sqrt(P * (P - a) * (P - b) * (P - c)));
	//float T = T * T;
	//return PI * T;
	return pow(T, 2) * PI;
	
	
}





	int main()

	{
		
		cout << MyRecArea(5, 6, 7) << endl;

	

		return 0;
	}

// ************************ Num 31 **************************************//

#include <iostream>
#include <string>

using namespace std;




int MyNumberPower(int a, int b) {

	return pow(a, b);

}







	int main()

	{
		
		cout << MyNumberPower(3, 2) << endl;
		cout << MyNumberPower(3, 3) << endl;
		cout << MyNumberPower(3, 4) << endl;

	

		return 0;
	}


